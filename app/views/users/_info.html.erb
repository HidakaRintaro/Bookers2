<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, size:"100x100", format:'jpeg', fallback:"no_image.jpg" %>
<table class="table">
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</table>
<div class="row">
  <%= link_to '', edit_user_path(user.id), class:'glyphicon glyphicon-wrench col-xs-12 btn btn-default' %>
</div>
